# ============================================
# Angple Environment Configuration Template
# ============================================
#
# 사용법:
#   1. 이 파일을 복사: cp .env.example .env.local
#   2. .env.local 파일에서 값 수정
#   3. Docker 실행: docker compose --env-file .env.local up -d
#
# 주의: .env.local 파일은 Git에 커밋되지 않습니다.
# ============================================

# --------------------------------------------
# 환경 설정
# --------------------------------------------
NODE_ENV=development

# --------------------------------------------
# 포트 설정 (모든 환경에서 동일하게 사용)
# --------------------------------------------
# Web 애플리케이션 포트
WEB_PORT=3010

# Admin 대시보드 포트 (현재 Web에 통합됨)
ADMIN_PORT=3011

# Backend API 포트
API_PORT=8081

# --------------------------------------------
# API URL 설정
# --------------------------------------------
# SSR 서버에서 사용하는 내부 API URL
# 로컬: http://localhost:8081/api/v2
# Docker: http://host.docker.internal:8081/api/v2
INTERNAL_API_URL=http://localhost:8081/api/v2

# 클라이언트에서 사용하는 공개 API URL (VITE_ 접두사 필수)
VITE_API_URL=http://localhost:8081/api/v2

# --------------------------------------------
# 레거시 연동 (다모앙 하이브리드 운영)
# --------------------------------------------
VITE_LEGACY_URL=https://damoang.net
VITE_ADS_URL=https://ads.damoang.net
VITE_S3_URL=https://s3.damoang.net

# --------------------------------------------
# Docker Compose 설정
# --------------------------------------------
# 컨테이너 이름 접두사 (예: angple-web, angple-admin)
COMPOSE_PROJECT_NAME=angple

# 데이터 저장 경로 (settings.json 등)
DATA_PATH=./data

# --------------------------------------------
# 기능 플래그
# --------------------------------------------
# Mock 모드 (백엔드 없이 테스트)
VITE_USE_MOCK=false

# --------------------------------------------
# 보안 설정 (프로덕션에서 반드시 변경)
# --------------------------------------------
# GitHub 토큰 암호화 키 (32바이트 hex)
# 생성: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
GITHUB_TOKEN_ENCRYPTION_KEY=

# --------------------------------------------
# Pre-built Docker 이미지 (선택사항)
# --------------------------------------------
# 로컬 빌드 대신 사전 빌드된 이미지 사용 시
# ANGPLE_WEB_IMAGE=ghcr.io/example/angple-web:latest

{
    "name": "web",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "build:static": "ADAPTER=static vite build",
        "preview": "vite preview",
        "preview:static": "ADAPTER=static vite build && vite preview",
        "prepare": "svelte-kit sync || echo ''",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "format": "prettier --write .",
        "lint": "prettier --check . && eslint .",
        "test:unit": "vitest",
        "test:unit:coverage": "vitest run --coverage",
        "test": "npm run test:unit -- --run && npm run test:e2e",
        "test:e2e": "playwright test"
    },
    "devDependencies": {
        "@axe-core/playwright": "^4.11.0",
        "@eslint/compat": "^1.2.5",
        "@eslint/js": "^9.18.0",
        "@internationalized/date": "^3.10.1",
        "@lucide/svelte": "^0.561.0",
        "@playwright/test": "^1.49.1",
        "@sveltejs/adapter-auto": "^6.0.0",
        "@sveltejs/adapter-node": "^5.5.2",
        "@sveltejs/adapter-static": "^3.0.9",
        "@sveltejs/kit": "^2.49.5",
        "@sveltejs/vite-plugin-svelte": "^6.0.0",
        "@tailwindcss/forms": "^0.5.9",
        "@tailwindcss/typography": "^0.5.15",
        "@tailwindcss/vite": "^4.0.0",
        "@types/adm-zip": "^0.5.7",
        "@types/dompurify": "^3.2.0",
        "@types/google-publisher-tag": "^1.20260202.0",
        "@types/node": "^25.0.3",
        "@types/tar": "^6.1.13",
        "@vitest/browser": "^3.2.3",
        "@vitest/coverage-v8": "^3.2.4",
        "bits-ui": "^2.15.4",
        "clsx": "^2.1.1",
        "eslint": "^9.18.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-filenames-simple": "^0.9.0",
        "eslint-plugin-svelte": "^3.0.0",
        "globals": "^16.0.0",
        "mode-watcher": "^1.1.0",
        "playwright": "^1.53.0",
        "svelte": "^5.46.4",
        "svelte-check": "^4.0.0",
        "tailwind-merge": "^3.3.1",
        "tailwind-variants": "^1.0.0",
        "tailwindcss": "^4.0.0",
        "tw-animate-css": "^1.3.7",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.20.0",
        "vite": "^7.0.4",
        "vitest": "^3.2.3",
        "vitest-browser-svelte": "^0.1.0"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "esbuild"
        ]
    },
    "dependencies": {
        "@angple/hook-system": "workspace:*",
        "@angple/i18n": "workspace:*",
        "@angple/theme-engine": "workspace:*",
        "@angple/types": "workspace:*",
        "@tiptap/core": "^3.17.0",
        "@tiptap/extension-image": "^3.17.0",
        "@tiptap/extension-link": "^3.17.0",

{
    "id": "plugin-mention",
    "name": "Mention System",
    "version": "1.0.0",
    "description": "@멘션 파싱 및 알림 시스템",
    "category": "plugin",
    "author": {
        "name": "Angple Team",
        "url": "https://angple.com"
    },
    "angpleVersion": ">=1.0.0",
    "hooks": {
        "comment_content": "./src/hooks/parse-mentions.js",
        "after_comment_submit": "./src/hooks/send-notification.js"
    },
    "components": {},
    "settings": {
        "maxMentionsPerComment": {
            "type": "number",
            "default": 10,
            "label": "댓글당 최대 멘션 수",
            "description": "한 댓글에서 허용되는 최대 멘션 개수"
        },
        "sendNotification": {
            "type": "boolean",
            "default": true,
            "label": "알림 전송",
            "description": "멘션 시 대상 사용자에게 알림 전송"
        }
    }
}
